// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// User roles enum
enum UserRole {
  admin
  doctor
  nurse
  receptionist
}

// User status enum
enum UserStatus {
  active
  inactive
}

// Gender enum
enum Gender {
  M
  F
}

// Blood type enum
enum BloodType {
  A
  B
  AB
  O
  Unknown
}

// Visit type enum
enum VisitType {
  outpatient
  emergency
  inpatient
}

// Medical record status enum
enum RecordStatus {
  draft
  confirmed
  archived
}

// Users table
model User {
  id            Int           @id @default(autoincrement())
  username      String        @unique @db.VarChar(50)
  password      String        @db.VarChar(255)
  email         String?       @unique @db.VarChar(100)
  phone         String?       @db.VarChar(20)
  role          UserRole      @default(receptionist)
  status        UserStatus    @default(active)
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")

  // Relations
  doctor        Doctor?
  operationLogs OperationLog[]

  @@index([role])
  @@index([status])
  @@map("users")
}

// Departments table
model Department {
  id          Int       @id @default(autoincrement())
  name        String    @db.VarChar(100)
  code        String?   @unique @db.VarChar(20)
  description String?   @db.Text
  status      Int       @default(1) @db.TinyInt
  createdAt   DateTime  @default(now()) @map("created_at")

  // Relations
  doctors        Doctor[]
  medicalRecords MedicalRecord[]

  @@map("departments")
}

// Doctors table
model Doctor {
  id           Int       @id @default(autoincrement())
  userId       Int       @unique @map("user_id")
  departmentId Int?      @map("department_id")
  name         String    @db.VarChar(50)
  title        String?   @db.VarChar(50)
  specialty    String?   @db.VarChar(200)
  licenseNo    String?   @unique @map("license_no") @db.VarChar(50)
  introduction String?   @db.Text
  createdAt    DateTime  @default(now()) @map("created_at")

  // Relations
  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  department     Department?     @relation(fields: [departmentId], references: [id], onDelete: SetNull)
  medicalRecords MedicalRecord[]

  @@map("doctors")
}

// Patients table
model Patient {
  id               Int        @id @default(autoincrement())
  medicalNo        String     @unique @map("medical_no") @db.VarChar(20)
  name             String     @db.VarChar(50)
  idCard           String?    @unique @map("id_card") @db.VarChar(18)
  gender           Gender?
  birthDate        DateTime?  @map("birth_date") @db.Date
  phone            String?    @db.VarChar(20)
  emergencyContact String?    @map("emergency_contact") @db.VarChar(50)
  emergencyPhone   String?    @map("emergency_phone") @db.VarChar(20)
  address          String?    @db.VarChar(255)
  bloodType        BloodType? @default(Unknown) @map("blood_type")
  allergies        String?    @db.Text
  medicalHistory   String?    @map("medical_history") @db.Text
  createdAt        DateTime   @default(now()) @map("created_at")
  updatedAt        DateTime   @updatedAt @map("updated_at")

  // Relations
  medicalRecords MedicalRecord[]

  @@index([name])
  @@index([phone])
  @@index([createdAt])
  @@map("patients")
}

// Medical Records table
model MedicalRecord {
  id             Int          @id @default(autoincrement())
  recordNo       String       @unique @map("record_no") @db.VarChar(30)
  patientId      Int          @map("patient_id")
  doctorId       Int          @map("doctor_id")
  departmentId   Int?         @map("department_id")
  visitType      VisitType?   @default(outpatient) @map("visit_type")
  visitDate      DateTime     @map("visit_date")
  chiefComplaint String?      @map("chief_complaint") @db.Text
  presentIllness String?      @map("present_illness") @db.Text
  physicalExam   String?      @map("physical_exam") @db.Text
  diagnosis      String?      @db.Text
  treatmentPlan  String?      @map("treatment_plan") @db.Text
  prescription   String?      @db.Text
  notes          String?      @db.Text
  status         RecordStatus @default(draft)
  createdAt      DateTime     @default(now()) @map("created_at")
  updatedAt      DateTime     @updatedAt @map("updated_at")

  // Relations
  patient       Patient        @relation(fields: [patientId], references: [id], onDelete: Cascade)
  doctor        Doctor         @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  department    Department?    @relation(fields: [departmentId], references: [id], onDelete: SetNull)
  prescriptions Prescription[]
  attachments   Attachment[]

  @@index([patientId])
  @@index([doctorId])
  @@index([departmentId])
  @@index([visitDate])
  @@index([status])
  @@index([visitType])
  @@index([diagnosis])
  @@map("medical_records")
}

// Prescriptions table
model Prescription {
  id            Int      @id @default(autoincrement())
  recordId      Int      @map("record_id")
  medicineName  String   @map("medicine_name") @db.VarChar(100)
  specification String?  @db.VarChar(100)
  dosage        String?  @db.VarChar(50)
  frequency     String?  @db.VarChar(50)
  duration      String?  @db.VarChar(50)
  quantity      Int?
  notes         String?  @db.VarChar(255)
  createdAt     DateTime @default(now()) @map("created_at")

  // Relations
  medicalRecord MedicalRecord @relation(fields: [recordId], references: [id], onDelete: Cascade)

  @@index([recordId])
  @@index([medicineName])
  @@map("prescriptions")
}

// Attachments table
model Attachment {
  id          Int      @id @default(autoincrement())
  recordId    Int      @map("record_id")
  fileName    String   @map("file_name") @db.VarChar(255)
  filePath    String   @map("file_path") @db.VarChar(500)
  fileType    String?  @map("file_type") @db.VarChar(50)
  fileSize    Int?     @map("file_size")
  description String?  @db.VarChar(255)
  createdAt   DateTime @default(now()) @map("created_at")

  // Relations
  medicalRecord MedicalRecord @relation(fields: [recordId], references: [id], onDelete: Cascade)

  @@map("attachments")
}

// Operation Logs table
model OperationLog {
  id        Int      @id @default(autoincrement())
  userId    Int?     @map("user_id")
  module    String?  @db.VarChar(50)
  action    String?  @db.VarChar(50)
  targetId  Int?     @map("target_id")
  ipAddress String?  @map("ip_address") @db.VarChar(50)
  userAgent String?  @map("user_agent") @db.VarChar(255)
  details   String?  @db.Text
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([createdAt])
  @@index([module])
  @@index([action])
  @@map("operation_logs")
}
